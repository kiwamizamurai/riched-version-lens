{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "noNonNullAssertion": "off",
                "noInferrableTypes": "off",
                "noUselessElse": "off",
                "useTemplate": "off",
                "useDefaultParameterLast": "off",
                "noUnusedTemplateLiteral": "off"
            },
            "complexity": {
                "noStaticOnlyClass": "off",
                "noForEach": "off",
                "noThisInStatic": "off",
                "useOptionalChain": "off",
                "noUselessConstructor": "off"
            }
        },
        "ignore": ["out/**", ".vscode-test/**", "node_modules/**", ".vscode-test/**/*"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120,
        "ignore": ["out/**", ".vscode-test/**", "node_modules/**", ".vscode-test/**/*"]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingComma": "es5"
        }
    }
}
